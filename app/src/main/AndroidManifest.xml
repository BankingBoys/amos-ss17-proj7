<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.fau.amos.virtualledger">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".android.dagger.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".android.authentication.AuthenticationChooserActivity"
            android:screenOrientation="portrait"
            android:label="Virtual Ledger"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".android.authentication.demo.login.LoginActivity"
                  android:screenOrientation="portrait">

        </activity>
        <activity
            android:name=".android.authentication.demo.registration.RegisterActivity"
            android:label="Register"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".android.views.menu.MainMenu"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            >
        </activity>
        <activity
            android:name=".android.views.bankingOverview.addBankAccess.AddBankAccessActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".android.views.savings.add.AddSavingsAccountActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".android.views.settings.SettingsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".android.authentication.oidc.OidcAuthenticationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >

                <intent-filter>
                    <action android:name="android.intent.action.MAIN" />
                    <category android:name="android.intent.category.LAUNCHER" />
                </intent-filter>
           </activity>


        <service android:name="org.jboss.aerogear.android.authorization.oauth2.OAuth2AuthzService"/>

    </application>

    <uses-permission android:name="android.permission.INTERNET"/>
