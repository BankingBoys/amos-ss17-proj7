<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.fau.amos.virtualledger">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".android.dagger.App"
        android:allowBackup="true"
        android:icon="@drawable/bankingboys"
        android:label="@string/app_name"
        android:roundIcon="@drawable/bankingboys"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".android.authentication.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".android.authentication.registration.RegisterActivity"
            android:label="Register"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".android.menu.MainMenu"
            android:theme="@style/AppTheme">
            >
        </activity>
        <activity
            android:name=".android.bankingOverview.addBankAccess.AddBankAccessActivity"
            android:theme="@style/AppTheme" />
    </application>

</manifest>