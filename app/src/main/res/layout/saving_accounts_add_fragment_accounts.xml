<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <Button
        android:id="@+id/add_savings_account_button_accounts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/add_savings_account_choose_accounts_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/add_savings_account_button_accounts"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="93dp"
        android:text="@string/add_savings_account_choose_accounts_text"
        android:textAlignment="center"
        android:textSize="24sp"/>
</RelativeLayout>