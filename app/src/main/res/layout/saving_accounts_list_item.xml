<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_layout_bla_bla"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/virtual_ledger_layout_space">


    <LinearLayout
        android:id="@+id/id_layout_bla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/virtual_ledger_layout_space"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/example_savings_goal_name"
            android:textColor="@color/colorBankingOverview"
            android:textSize="@dimen/fontSizeL" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Space
                android:layout_width="@dimen/fontSizeM"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/id_time_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="@string/example_savings_goal_time"
                android:textColor="@color/colorBankingOverview"
                android:textSize="@dimen/fontSizeM" />

        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_current_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/example_savings_goal_amount_today"
            android:textSize="@dimen/fontSizeXXL" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:text="@string/slash"
            android:textSize="@dimen/fontSizeXXL" />

        <TextView
            android:id="@+id/id_goal_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:text="@string/example_savings_goal_amount_today"
            android:textSize="@dimen/fontSizeXXL" />

    </LinearLayout>

</LinearLayout>