<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="3sp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/id_layout_bla_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/id_layout_bla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/id_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sparschwein"
                    android:textColor="@color/colorBankingOverview"
                    android:textSize="@dimen/fontSizeL" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="@dimen/fontSizeM"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/id_time_left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3 days left"
                        android:layout_gravity="start"
                        android:textColor="@color/colorBankingOverview"
                        android:textSize="@dimen/fontSizeM" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_current_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300"
                android:textSize="@dimen/fontSizeXXL" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:text="/"
                android:textSize="@dimen/fontSizeXXL" />

            <TextView
                android:id="@+id/id_goal_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:text="400"
                android:textSize="@dimen/fontSizeXXL" />

        </LinearLayout>

    </RelativeLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/fontSizeXS"
        android:layout_weight="1" />

</LinearLayout>