<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/caldroid_black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/date_range_chooser_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please specify your date range. Select your first day and your last day of transactions.\n"
        android:background="@color/caldroid_transparent"
        android:textSize="@dimen/spinner_item_size"
        android:textColor="@color/colorBankingOverview" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/caldroid_transparent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="From: "
            android:textAlignment="viewEnd"
            android:textSize="@dimen/spinner_item_size"
            android:background="@color/caldroid_transparent"
            android:textColor="@color/colorBankingOverview" />

        <Button
            android:id="@+id/start_date_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="(choose)"
            android:textSize="@dimen/spinner_item_size"
            android:background="@drawable/button_border"
            android:textColor="@color/colorBankingOverview" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="To: "
            android:textAlignment="textEnd"
            android:textSize="@dimen/spinner_item_size"
            android:background="@color/caldroid_transparent"
            android:textColor="@color/colorBankingOverview" />

        <Button
            android:id="@+id/end_date_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_border"
            android:gravity="center"
            android:text="(choose)"
            android:textSize="@dimen/spinner_item_size"
            android:textColor="@color/colorBankingOverview" />

    </LinearLayout>

</LinearLayout>