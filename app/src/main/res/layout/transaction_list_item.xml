<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:id="@+id/id_layout_bla_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_datum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/example_german_date"
            android:textColor="@color/colorBankingOverview"
            android:textSize="@dimen/fontSizeTransactionOverview"
            android:textStyle="normal" />

        <LinearLayout
            android:id="@+id/id_layout_bla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_bankname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/example_bank_name"
                android:textColor="@color/colorBankingOverview"
                android:textSize="@dimen/fontSizeTransactionOverview"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/id_usage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/example_transaction_name"
                android:textColor="@color/colorBankingOverview"
                android:textSize="@dimen/fontSizeTransactionOverview"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/id_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/example_transaction_value"
        android:textColor="@color/colorBankingOverviewLightGreen"
        android:textSize="@dimen/fontSizeTransactionOverview"
        android:textStyle="bold" />

</RelativeLayout>