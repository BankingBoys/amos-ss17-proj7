<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".android.menu.MainMenu">

    <TextView
        android:id="@+id/BankAccessBalanceOverview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#52BF90"
        android:textSize="@dimen/fontSizeOverviewBalance"
        android:textStyle="bold"
        />
    <View
        android:id="@+id/BankOverviewSeperator"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_height="2dp"
        android:background="#52BF90"
        android:visibility="gone"
        >

    </View>


    <ExpandableListView
        android:id="@+id/expandableView"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ExpandableListView>

</LinearLayout>